<header id="header">

  <nav class="containerNavMain">

    <div class="logoNav">
      <a href="/">
        <img class="logoFH" src="/images/FHLogo.svg" alt="Ferretería Hernandez">
      </a>
    </div>

    <form class="containerSearch cs01 shadow1" action="/products/results" method="GET">
      <input type="search" name="search" class="searchIn" placeholder="Buscar">
      <button type="submit" class="btnSearch"><span class="material-icons searchIc">search</span></button>
    </form>

    <ul class="iconsNav">
      <li><a href="/login"><span class="material-icons" title="iniciar Sesión">person</span></li></a>
      <li><a href="/productCart"><span class="material-icons" title="Carrito">shopping_cart</span></li></a>
      <li><a href="mailto:info@fh.com.ar"><span class="material-icons" title="Contacto">contact_mail</span></li></a>
    </ul>
  </nav>

  <nav class="containerNavMenu">

    <div class="menuIc">
      <a href="javascript:void(0);"><span class="material-icons">menu</span></a>
    </div>

    <form class="containerSearch cs02 shadow1" action="/products/results" method="GET">
      <input type="search" name="search" class="searchIn" placeholder="Buscar">
      <button type="submit" class="btnSearch"><span class="material-icons searchIc">search</span></button>
    </form>

    <nav class="containerNavMenu">
      <ul class="navMenuList">
        <% for (var item of itemsNav){ %>
          <li class="navMenuListItem"><a href="<%= href %><%= item.ID %>">
              <%= item.nombre %>
            </a></li>
          <% } %>
            <% if (typeof user !='undefined' && user !=null) { %>
              <li class="navMenuListItem profD"><a href="/users/profile/<%= user.ID %>">Ver Perfil</a></li>
              <li class="navMenuListItem"><a href="/users/edit/<%= user.ID %>"><%= user.nombre %></a></li>
              <% } %>
      </ul>
    </nav>
  </nav>

  <nav class="containerNavMenuMobile">
    <ul class="navMenuListMobile">
      <% for (var item of itemsNav){ %>
        <li class="navMenuListItem"><a href="<%= href %><%= item.ID %>">
            <%= item.nombre %>
          </a></li>
        <% } %>
          <% if (typeof user !='undefined' && user !=null) { %>

            <li class="navMenuListItem profM"><a href="/users/profile/<%= user.ID %>">Ver Perfil</a></li>
            <li class="navMenuListItem"><a href="/users/edit/<%= user.ID %>"><%= user.nombre %></a></li>
          <% } %>
    </ul>
  </nav>

</header>